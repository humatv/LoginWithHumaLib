<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/login_button_back_selected_color" />
            <corners android:radius="2dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/login_button_back_selected_color" />
            <corners android:radius="2dp" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/login_button_back_unselected_color" />
            <corners android:radius="2dp" />
            <stroke android:width="1dp" android:color="@color/login_button_back_selected_color"/>
        </shape>
    </item>


</selector>